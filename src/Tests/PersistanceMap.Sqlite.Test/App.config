<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="persistanceMap" type="PersistanceMap.Configuration.PersistanceMapSection, PersistanceMap" />
  </configSections>
  <connectionStrings>
    <add name="PersistanceMap.Test.Properties.Settings.ConnectionString" connectionString="data source=SQLiteDemo.db" />
  </connectionStrings>

  <persistanceMap>
    <loggers>
      <!-- Write all log messages of PersistanceMap to System.Diagnostics.Trace -->
      <add type="PersistanceMap.Tracing.TraceLogger, PersistanceMap"/>
    </loggers>
  </persistanceMap>
</configuration>